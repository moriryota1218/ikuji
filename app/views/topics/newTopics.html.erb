<!--新着の非ログイン-->
<div class="topic-show-wrapper">
  <div class="container">
    <% @topics.each do |t| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-show-single">
          <h4 class="topic-author">
            <ul style="list-style:none;">
              <li><%= topic.user.name %></li>
              <li><%= topic.title %></li>
            </ul>
          </h4>
          <% if topic.image.url == nil %>
          <img src="http://placehold.jp/50/bebecc/e3dfdf/350x350.png?text=No%20Image" >
          <% else %>
          <%= image_tag topic.image.url %>
          <% end %>
          <p class="topic-text">
            <ul>
              <li><%= topic.category %></li>
            </ul>
            <ul style="list-style:none;">
              <li><%= topic.description %></li>
            </ul>
          </p>

         <%= form_for topic do |f| %>
          <div style="text-align:center">
            <div class="btn2-group">
              <%= f.submit "登録", class: 'btn2 btn-lg btn-primary ' %>
            </div>
          </div>
         <% end %>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
