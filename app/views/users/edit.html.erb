<div class="users-edit-wrapper">
  <div class="container">

    <div class="row">

      <h1>プロフィール編集</h1>

      <div class="col-md-offset-4 col-md-4 users-new-container">
        <%= form_for(@user) do |f| %>

        <div>

          <%= f.label :name,  "名前" %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :email, "メールアドレス"%>
          <%= f.email_field :email, class: 'form-control' %>


          <%= f.label :s_introduction, "自己紹介"%>
          <%= f.text_area :s_introduction, class: 'form-control' %>

            <%= f.label :image, "画像"%>
            <%= f.file_field :image %>

        </div>
        <div style="text-align:center">
          <div class="btn4-group">
            <%= f.submit "更新", class: 'btn4 btn-lg btn-primary ' %>
          </div>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
