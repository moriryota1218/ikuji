        <% end %>
      </div>
    </div>

    <%= form_for [@topics, @topic.comments] do |f| %>
    <%= f.text_field :content %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :topic_id, :value => @topic_id %>
    <br>
    <%= f.submit "コメントする", class: 'btn4 btn-lg btn-primary' %>
    <% end %>

    <% end %>

  </div>
</div>
