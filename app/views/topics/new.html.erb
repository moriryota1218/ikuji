<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">新規投稿</h1>
         <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>


            <%= f.label :category %><br>
             <%= f.select :category, [["しつけ", "しつけ"], ["病気", "病気"],["遊び場、レストラン"],["授乳場所"]], class:"form-control" %>
             <br>
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
           </div>

           <div class="form-group">
             <%= f.label :image %>
             <%= f.file_field :image %>
           </div>
          <div style="text-align:center">
           <%= f.submit '投稿', class: 'btn4 btn-lg btn-primary' %>
         </div>
            <% end %>

         </div>
       </div>
     </div>
   </div>
