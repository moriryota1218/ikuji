<div class="main user-show">
  <div class="container">
    <%= form_for(@user) do |f| %>
    <div class="user">
      <h1 class="text-center">マイページ</h1>

      <% if @user.image.url == nil %>
       <img src="http://placehold.jp/50/bebecc/e3dfdf/350x350.png?text=No%20Image" >
      <% else %>
       <%= image_tag @user.image.url %>
     <% end %>


      <h2><%= @user.name %></h2>
      <p><%= @user.s_introduction %></p>

      <%= link_to "編集", edit_user_path(@user.id) %>

    </div>
    <% end %>
  </div>
</div>
